<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anoop.myphoto.VideoResult"
    android:weightSum="1"
    android:background="@drawable/back">

    <TextView
        android:text="Text Result"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="35dp"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/back3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#fdd"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:hint="Text Result will appear here !"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffee00"
                android:textIsSelectable="true"
                 />

            <Button
                android:text="Copy Text to Clipboard"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/butt"
                android:id="@+id/btnCopy"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFF"
                android:onClick="onCopy" />

            <Button
                android:text="Search On Google"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/butt"
                android:id="@+id/btnsearch"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFF"
                android:onClick="onSearch" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
